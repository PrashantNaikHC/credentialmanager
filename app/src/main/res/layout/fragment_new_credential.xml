<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/new_credential_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_margin="@dimen/default_margin"
                tools:text="Add new Credential" android:textSize="@dimen/headline_string" android:textStyle="bold"
                android:fontFamily="sans-serif-thin"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/name" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintBottom_toTopOf="@+id/password" android:hint="Name"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/password" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintBottom_toTopOf="@+id/reset_time" android:hint="Password"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/reset_time" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/password"
                app:layout_constraintBottom_toTopOf="@+id/link" android:hint="Reset time"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/link" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/reset_time"
                android:hint="link"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/progress_bar"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:src="@android:drawable/ic_input_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/floatingActionButton" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="@dimen/default_margin"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_bar"
                app:layout_constraintEnd_toEndOf="@+id/password_strength" android:layout_marginEnd="16dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintStart_toEndOf="@+id/password" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.435"
                app:layout_constraintStart_toStartOf="@+id/password_strength" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/password_strength"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/password_strength"
                style="?attr/textAppearanceSmallPopupMenu"
                tools:text="Strong" app:layout_constraintTop_toTopOf="@+id/password"
                app:layout_constraintBottom_toBottomOf="@+id/password" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/password"
                android:layout_marginStart="8dp" android:fontFamily="sans-serif-thin"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar" app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:max="4"
                android:progress="2" android:rotation="0"/>
        <ImageView
                android:src="@android:drawable/ic_lock_lock"
                android:layout_width="56dp"
                android:layout_height="63dp"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/name" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/name" app:layout_constraintBottom_toBottomOf="@+id/name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>